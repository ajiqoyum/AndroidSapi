            <solid android:color="#0FFFFFFF" />
            <corners android:radius="7dp"/>
            <stroke android:color="#0cc242" android:width="1.5dp"/>
        </shape>
    </item>

    <item android:state_enabled="true" >
        <shape android:shape="rectangle">
            <solid android:color="#0FFFFFFF"/>
            <corners android:radius="7dp"/>
            <stroke android:color="#686e6a" android:width="1.5dp"/>
        </shape>
    </item>

</selector>